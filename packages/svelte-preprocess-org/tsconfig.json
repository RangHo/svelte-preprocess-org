{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023"],

    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true,

    "strict": true
  },
  "include": ["src"]
}
