{
  "extends": "@tsconfig/node-lts",
  "compilerOptions": {
    "module": "node16",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "preserveSymlinks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
